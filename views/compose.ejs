<%- include('./partials/header'); -%>
<h1>Compose</h1>
<form class="form-group" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" class="form-control" name="postTitle" />
    <label for="post">Post</label>
    <textarea
      id="post"
      class="form-control"
      name="postBody"
      cols="3  0"
      rows="5"
    ></textarea>
  </div>
  <button type="submit" name="submit" button class="btn btn-primary">
    Publish
  </button>
</form>

<%- include('./partials/footer'); -%>
